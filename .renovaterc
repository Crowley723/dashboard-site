{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(build)",
    ":separatePatchReleases",
    "workarounds:doNotUpgradeFromAlpineStableToEdge"
  ],
  "ignorePresets": [
    ":prHourlyLimit2",
    ":semanticPrefixFixDepsChoreOthers",
    "workarounds:all"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "gomod",
    "kubernetes",
    "npm"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/kube/.+\\.yml$/"
    ]
  },
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "docker"
      ]
    },
    {
      "matchDatasources": [
        "go"
      ],
      "addLabels": [
        "go"
      ]
    },
    {
      "matchDatasources": [
        "kubernetes"
      ],
      "addLabels": [
        "kubernetes"
      ]
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "addLabels": [
        "javascript"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}